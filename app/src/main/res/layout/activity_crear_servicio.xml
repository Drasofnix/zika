<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Crear_servicio"
    android:background="@drawable/gradient_background_color"
    >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="683dp"
        android:text="New Service"
        android:textColor="#FFFCFC"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/service_title"
        android:layout_width="290dp"
        android:layout_height="73dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Title"
        android:textColorHint="#97FDFAFA"
        android:textAlignment="center"
        android:background="@drawable/edit_text_border"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.045" />

    <EditText
        android:id="@+id/service_price"
        android:layout_width="275dp"
        android:layout_height="67dp"
        android:ems="10"
        android:hint="Price"
        android:textColorHint="#97FDFAFA"
        android:textAlignment="center"
        android:background="@drawable/edit_text_border"
        android:inputType="number"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_service"
        app:layout_constraintVertical_bias="0.217" />

    <EditText
        android:id="@+id/description_service"
        android:layout_width="282dp"
        android:layout_height="62dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Descripcion"
        android:textColorHint="#97FDFAFA"
        android:textAlignment="center"
        android:background="@drawable/edit_text_border"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_title" />

    <Button
        android:id="@+id/button_create"
        android:layout_width="239dp"
        android:layout_height="55dp"
        android:layout_marginStart="154dp"
        android:layout_marginEnd="169dp"
        android:text="Create"
        android:background="#008382"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_price" />
</androidx.constraintlayout.widget.ConstraintLayout>